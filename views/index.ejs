<!DOCTYPE html>
<html>
  <%- include(`head`) %>
  <body>
    <% let itemCount = 0 %>
    <% data.forEach(function(type){ %>
      <div style="border: 1px solid black;margin: 16px 0px;">
      <% type.items.forEach(function(item){ %>
        <% item.id = itemCount %>
        <%- include(`index/item`, {
          item: item, itemCount: itemCount
        }) %>
        <% itemCount++ %>
      <% }); %>
      </div>
    <% }); %>

    <%- include(`index/draggable`, {items: equipment}) %>

    <%- include(`script`, {items: equipment}) %>
  </body>
</html>
